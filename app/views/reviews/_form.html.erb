
<div class="text-center">

  <h3 class=text-warning>Review Board</h3>
    <h5 class="text-muted">Reviews (<%= @foodtruck.reviews.size %>)</h5>
  <br>
      <%= form_for [ @foodtruck, @review ] do |f| %>

          <p class="text-warning">
            <%= f.label :author %>
            <br/>
            <%= f.text_field :author %>
          </p>


          <p class="text-warning">
            <%= f.label :rating %>
            <br>
            <%= f.text_field :rating %>
          </p>

          <p class="text-warning">
            <%= f.label :message %>
            <br/>
            <%= f.text_area :message %>
          </p>


          <p class="text-info">
            <%= f.submit 'Post Review', class: "btn btn-info" %>
          </p>

      <% end %>


</div>
